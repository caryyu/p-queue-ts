{
  "files": ["src/index.ts"],
  "compilerOptions": {
    "outDir": "./dist",
    "noImplicitAny": false,
    "noImplicitUseStrict": true,
    "module": "CommonJS",
    "target": "ESNext",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["ES2015"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
